@model TmsSystem.Models.Trip

@{
    ViewData["Title"] = "עריכת טיול";
    var orderedDays = Model.TripDays?.OrderBy(d => d.DayNumber).ToList() ?? new List<TmsSystem.Models.TripDay>();
}

<style>
    /* RTL רק לשדות טקסט */
    .form-control, .form-select, textarea {
        direction: rtl;
        text-align: right;
    }

    .form-label, label {
        direction: rtl;
        text-align: right;
    }

    h1, h2, h3, h4, h5, h6 {
        direction: rtl;
        text-align: right;
    }
</style>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h3><i class="fas fa-edit"></i> עריכת טיול: @Model.Title</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" id="tripForm">
                <input type="hidden" asp-for="TripId" />
                <input type="hidden" asp-for="CreatedAt" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="לדוגמה: טיול מאורגן בצפון" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="NumberOfDays" class="form-label"></label>
                        <select asp-for="NumberOfDays" class="form-select" id="numberOfDays">
                            @for (int i = 5; i <= 12; i++)
                            {
                                <option value="@i" selected="@(i == Model.NumberOfDays)">@i ימים</option>
                            }
                        </select>
                        <span asp-validation-for="NumberOfDays" class="text-danger"></span>
                        <small class="form-text text-muted">ניתן לשנות את מספר הימים - ימים חדשים יתווספו, ימים עודפים יימחקו</small>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="תיאור כללי של הטיול..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <!-- שדה מדריך -->
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="GuideId" class="form-label">
                            <i class="fas fa-user-tie"></i> מדריך מלווה (אופציונלי)
                        </label>

                        @if (ViewBag.Guides != null)
                        {
                            <select asp-for="GuideId" class="form-select" asp-items="ViewBag.Guides">
                                <option value="">-- ללא מדריך / נבחר בהמשך --</option>
                            </select>
                        }
                        else
                        {
                            <select asp-for="GuideId" class="form-select" disabled>
                                <option value="">טוען מדריכים...</option>
                            </select>
                        }

                        <span asp-validation-for="GuideId" class="text-danger"></span>
                        <small class="form-text text-muted">
                            ניתן לשייך מדריך לטיול או להשאיר ללא מדריך
                        </small>
                    </div>

                    <div class="col-md-6 mb-3">
                        @if (Model.Guide != null)
                        {
                            <label class="form-label">מדריך נוכחי</label>
                            <div class="alert alert-info mb-0">
                                <i class="fas fa-user-circle"></i> <strong>@Model.Guide.GuideName</strong><br>
                                @if (!string.IsNullOrEmpty(Model.Guide.Phone))
                                {
                                    <small>📞 @Model.Guide.Phone</small>
                                }
                                @if (!string.IsNullOrEmpty(Model.Guide.Email))
                                {
                                    <small> | ✉️ @Model.Guide.Email</small>
                                }
                            </div>
                        }
                    </div>


                <hr />

                <h4 class="mb-3">
                    <i class="fas fa-calendar-day"></i> עריכת ימי הטיול
                    <span class="badge bg-info">@orderedDays.Count ימים</span>
                </h4>

                <div id="tripDaysContainer">
                    @if (orderedDays.Any())
                    {
                        for (int i = 0; i < orderedDays.Count; i++)
                        {
                            var day = orderedDays[i];
                            <div class="card mb-3 trip-day-card" data-day-index="@i">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">יום @day.DayNumber</h5>
                                    @if (day.TripDayId > 0)
                                    {
                                        <span class="badge bg-primary">קיים</span>
                                    }
                                </div>
                                <div class="card-body">
                                    <input type="hidden" name="TripDays[@i].TripDayId" value="@day.TripDayId" class="trip-day-id" />
                                    <input type="hidden" name="TripDays[@i].TripId" value="@day.TripId" />
                                    <input type="hidden" name="TripDays[@i].DayNumber" value="@day.DayNumber" class="day-number-input" />
                                    <input type="hidden" name="TripDays[@i].DisplayOrder" value="@day.DisplayOrder" class="display-order-input" />
                                    <input type="hidden" name="TripDays[@i].ImagePath" value="@day.ImagePath" class="image-path-input" />

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">כותרת *</label>
                                            <input name="TripDays[@i].Title" class="form-control" placeholder="לדוגמה: יום פתיחה - הגעה למלון" value="@day.Title" required />
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">מיקום</label>
                                            <input name="TripDays[@i].Location" class="form-control" placeholder="לדוגמה: צפת העתיקה" value="@day.Location" />
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">תיאור</label>
                                        <textarea name="TripDays[@i].Description" class="form-control" rows="4" placeholder="פירוט מלא של פעילויות היום...">@day.Description</textarea>
                                    </div>

                                    <div class="row">
                                        @if (!string.IsNullOrEmpty(day.ImagePath))
                                        {
                                            <div class="col-md-6 mb-3 current-image-container">
                                                <label class="form-label">תמונה נוכחית</label>
                                                <div class="position-relative">
                                                    <img src="@day.ImagePath" alt="@day.Title" class="img-thumbnail current-image" style="max-height: 200px; max-width: 100%; display: block;" />
                                                    <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2 delete-image-btn" data-day-index="@i" style="z-index: 10;">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        }
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">@(string.IsNullOrEmpty(day.ImagePath) ? "תמונה ליום" : "תמונה חדשה (אופציונלי)")</label>
                                            <input type="file" name="dayImage_@i" class="form-control day-image-input" accept="image/*" data-day-index="@i" />
                                            <small class="form-text text-muted">
                                                @if (!string.IsNullOrEmpty(day.ImagePath))
                                                {
                                                    <text>השאר ריק כדי לשמור את התמונה הנוכחית</text>
                                                }
                                                else
                                                {
                                                    <text>גודל מומלץ: 1200x800 פיקסלים</text>
                                                }
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> אין ימים לטיול זה. אנא שנה את מספר הימים כדי להוסיף ימים.
                        </div>
                    }
                </div>

                <hr />

                <!-- פרטי מחיר ופרטים נוספים -->
                <div class="card mb-3 bg-light">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-dollar-sign"></i> פרטי מחיר ומידע נוסף</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PricePerPerson" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="PricePerPerson" class="form-control" type="number" step="0.01" placeholder="1500" />
                                    <span class="input-group-text">$</span>
                                </div>
                                <span asp-validation-for="PricePerPerson" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="PriceDescription" class="form-label"></label>
                                <input asp-for="PriceDescription" class="form-control" placeholder="לדוגמה: 1500$ לאדם בחדר זוגי" />
                                <span asp-validation-for="PriceDescription" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Includes" class="form-label"></label>
                                <textarea asp-for="Includes" class="form-control" rows="6" placeholder="לדוגמה:&#10;לינה במלונות 4-5 כוכבים&#10;ארוחות בוקר&#10;הסעות באוטובוס מפואר&#10;מדריך מקצועי צמוד&#10;כניסה לכל האתרים"></textarea>
                                <small class="form-text text-muted">כל פריט בשורה נפרדת</small>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Excludes" class="form-label"></label>
                                <textarea asp-for="Excludes" class="form-control" rows="6" placeholder="לדוגמה:&#10;טיסות בינלאומיות&#10;ביטוח נסיעות&#10;ארוחות צהריים וערב&#10;הוצאות אישיות&#10;טיפים"></textarea>
                                <small class="form-text text-muted">כל פריט בשורה נפרדת</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FlightDetails" class="form-label"></label>
                            <textarea asp-for="FlightDetails" class="form-control" rows="5" placeholder="לדוגמה:&#10;טיסות זמינות:&#10;אל על LY315 - יציאה: 06:00, נחיתה: 10:30&#10;ישראייר 6H501 - יציאה: 14:00, נחיתה: 18:30&#10;&#10;מחיר טיסה הלוך-חזור: כ-800$"></textarea>
                            <small class="form-text text-muted">פרטי טיסות זמינות ומחירים משוערים</small>
                        </div>

                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-right"></i> חזרה
                    </a>
                    <button type="submit" class="btn btn-warning btn-lg">
                        <i class="fas fa-save"></i> שמור שינויים
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            console.log('Edit page loaded.Current days: ' + @orderedDays.Count);

            // מחיקת תמונה
            $(document).on('click', '.delete-image-btn', function(e) {
                e.preventDefault();
                var dayIndex = $(this).data('day-index');
                var card = $(this).closest('.trip-day-card');

                if (confirm('האם אתה בטוח שברצונך למחוק את התמונה?')) {
                    $(this).closest('.current-image-container').hide();
                    card.find('.image-path-input').val('');
                    alert('התמונה תימחק בעת שמירת השינויים');
                }
            });

            // שינוי מספר ימים
            $('#numberOfDays').change(function () {
                var numDays = parseInt($(this).val());
                var container = $('#tripDaysContainer');
                var currentDays = container.find('.trip-day-card').length;

                if (numDays > currentDays) {
                    for (var i = currentDays; i < numDays; i++) {
                        addDay(i + 1, i);
                    }
                } else if (numDays < currentDays) {
                    if (confirm('האם אתה בטוח שברצונך להסיר ' + (currentDays - numDays) + ' ימים?')) {
                        container.find('.trip-day-card').slice(numDays).remove();
                        reindexDays();
                    } else {
                        $(this).val(currentDays);
                    }
                }
            });

            function addDay(dayNumber, index) {
                var html = `
                    <div class="card mb-3 trip-day-card" data-day-index="${index}">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">יום ${dayNumber}</h5>
                            <span class="badge bg-success">חדש</span>
                        </div>
                        <div class="card-body">
                            <input type="hidden" name="TripDays[${index}].TripDayId" value="0" />
                            <input type="hidden" name="TripDays[${index}].TripId" value="@Model.TripId" />
                            <input type="hidden" name="TripDays[${index}].DayNumber" value="${dayNumber}" />
                            <input type="hidden" name="TripDays[${index}].DisplayOrder" value="${dayNumber}" />
                            <input type="hidden" name="TripDays[${index}].ImagePath" value="" />
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">כותרת *</label>
                                    <input name="TripDays[${index}].Title" class="form-control" value="יום ${dayNumber}" required />
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">מיקום</label>
                                    <input name="TripDays[${index}].Location" class="form-control" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">תיאור</label>
                                <textarea name="TripDays[${index}].Description" class="form-control" rows="4"></textarea>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">תמונה ליום</label>
                                <input type="file" name="dayImage_${index}" class="form-control" accept="image/*" />
                            </div>
                        </div>
                    </div>
                `;
                $('#tripDaysContainer').append(html);
            }

            function reindexDays() {
                $('#tripDaysContainer .trip-day-card').each(function(index) {
                    var dayNumber = index + 1;
                    $(this).attr('data-day-index', index);
                    $(this).find('h5').first().text('יום ' + dayNumber);
                    $(this).find('input, textarea').each(function() {
                        var name = $(this).attr('name');
                        if (name && name.startsWith('TripDays[')) {
                            var field = name.split('.')[1] || name.split('_')[0];
                            if (field.includes('dayImage')) {
                                $(this).attr('name', `dayImage_${index}`);
                            } else if (name.includes('.')) {
                                $(this).attr('name', `TripDays[${index}].${name.split('.')[1]}`);
                            }
                        }
                    });
                });
            }

            var formChanged = false;
            $('input, textarea, select').on('change', function() {
                formChanged = true;
            });

            $(window).on('beforeunload', function(e) {
                if (formChanged) {
                    return 'יש שינויים שלא נשמרו';
                }
            });

            $('form').on('submit', function() {
                formChanged = false;
            });
        });
    </script>
}