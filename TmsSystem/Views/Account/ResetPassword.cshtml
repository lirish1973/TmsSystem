@model TmsSystem.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "איפוס סיסמה";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3>
                        <i class="bi bi-key-fill"></i> איפוס סיסמה
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center" role="alert">
                            <i class="bi bi-check-circle-fill"></i>
                            @ViewData["SuccessMessage"]
                        </div>
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-left"></i> התחבר למערכת
                            </a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="AdminResetPassword" method="post">
                            <input type="hidden" asp-for="Code" />
                            <input type="hidden" asp-for="Email" />

                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">אימייל</label>
                                <input asp-for="Email" class="form-control" readonly />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">סיסמה חדשה</label>
                                <input asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">אימות סיסמה</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle"></i> אפס סיסמה
                                </button>
                            </div>

                            <div class="text-center mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-info-circle"></i>
                                    הסיסמה חייבת להיות לפחות 6 תווים
                                </small>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}