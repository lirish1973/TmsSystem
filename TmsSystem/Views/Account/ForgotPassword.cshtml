@model TmsSystem.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "שכחתי סיסמה";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4 text-primary">איפוס סיסמה</h3>

                    <p class="text-muted text-center mb-4">
                        הזן את כתובת האימייל שלך ונשלח אליך קישור לאיפוס הסיסמה
                    </p>

                    @* הודעת הצלחה *@
                    @if (ViewData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success text-center">
                            @ViewData["SuccessMessage"]
                        </div>
                    }

                    @* הודעת שגיאה *@
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    <form asp-controller="Account"
                          asp-action="ForgotPassword"
                          method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">אימייל</label>
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="example@mail.com"
                                   dir="ltr"
                                   required
                                   autofocus />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            שלח קישור לאיפוס
                        </button>

                        <div class="text-center">
                            <a asp-controller="Account" asp-action="Login" class="text-primary">
                                <i class="fas fa-arrow-left"></i> חזרה לדף התחברות
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}