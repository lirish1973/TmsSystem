@{
    ViewData["Title"] = "דף הבית";
}

@if (User.Identity.IsAuthenticated)
{
    <!-- תוכן למשתמשים מחוברים -->
    <div class="row">
        <div class="col-md-12">
            <h2>  ברוך הבא למערכת יצירת הצעות מחיר</h2>
            <br />
            <!-- סטטיסטיקות מהירות -->
            <div class="row mt-4">
                <!-- כרטיס משתמשים - רק למנהלים -->
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@ViewBag.TotalUsers</h4>
                                    <p>משתמשים</p>
                                </div>
                                <i class="bi bi-people display-4"></i>
                            </div>
                        </div>
                    </div>
                </div>}

                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@ViewBag.TotalCustomers</h4>
                                    <p>לקוחות</p>
                                </div>
                                <i class="bi bi-person-check display-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>@ViewBag.TotalTours</h4>
                                    <p>סיורים</p>
                                </div>
                                <i class="bi bi-geo-alt display-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>0</h4>
                                    <p>הזמנות היום</p>
                                </div>
                                <i class="bi bi-calendar-check display-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- פעולות מהירות -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <h4>פעולות מהירות</h4>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="bi bi-person-plus display-4 text-primary"></i>
                                    <h5 class="mt-2">לקוח חדש</h5>
                                    <a href="@Url.Action("Create", "Customers")" class="btn btn-primary">הוסף לקוח</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="bi bi-geo-alt-fill display-4 text-success"></i>
                                    <h5 class="mt-2">סיור חדש</h5>
                                    <a href="@Url.Action("CreateTour", "Tours")" class="btn btn-success">יצור סיור</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <i class="bi bi-cash-stack display-4 text-info"></i>
                                    <h5 class="mt-2">הצעת מחיר</h5>
                                    <a href="@Url.Action("Create", "Offers")" class="btn btn-info">צור הצעה</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- אזור מנהל -->
            @if (User.IsInRole("Admin"))
            {
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="alert alert-warning">
                            <h5><i class="bi bi-shield-check"></i> פאנל מנהל מערכת</h5>
                            <p>אתה מחובר כמנהל מערכת עם הרשאות מלאות.</p>
                            <a href="@Url.Action("Index", "Users")" class="btn btn-warning me-2">ניהול משתמשים</a>
                            <a href="@Url.Action("Register", "Account")" class="btn btn-secondary">הוספת משתמש חדש</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <!-- תוכן למשתמשים לא מחוברים -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>ברוכים הבאים למערכת יצירת הצעות מחיר</h3>
                </div>
                <div class="card-body text-center">
                    <p class="lead">אנא התחבר למערכת כדי לגשת לכל האפשרויות</p>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">כניסה למערכת</a>
                </div>
            </div>
        </div>
    </div>
}