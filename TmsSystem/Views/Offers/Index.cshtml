<script>
    // ============================================
    // חיפוש מתוקן - עובד בזמן אמת
    // ============================================
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById("searchInput");

        if (searchInput) {
            // חיבור אירועי חיפוש
            searchInput.addEventListener('input', filterOffers);
            searchInput.addEventListener('keyup', filterOffers);
        }
    });

    function filterOffers() {
        const searchInput = document.getElementById("searchInput");
        const search = searchInput.value.trim().toLowerCase();
        const cards = document.querySelectorAll("#offerList .offer-card");
        let shown = 0;

        cards.forEach(function(card) {
            // חיפוש ב-data attributes
            const customer = (card.getAttribute("data-customer") || "").toLowerCase();
            const guide = (card.getAttribute("data-guide") || "").toLowerCase();
            const offerid = (card.getAttribute("data-offerid") || "").toLowerCase();

            // חיפוש גם בתוכן הטקסט המלא של הכרטיסייה
            const cardText = card.textContent.toLowerCase();

            // בדיקה אם נמצאה התאמה
            const matches =
                customer.includes(search) ||
                guide.includes(search) ||
                offerid.includes(search) ||
                cardText.includes(search);

            if (matches) {
                card.style.display = "";
                shown++;
            } else {
                card.style.display = "none";
            }
        });

        // עדכון סטטיסטיקות
        const statElement = document.getElementById("statTotalOffers");
        if (statElement) {
            const totalOffers = cards.length;
            statElement.textContent = search ? shown : totalOffers;
        }

        // הצגת/הסתרת הודעת "לא נמצאו תוצאות"
        showNoResultsMessage(shown, search);
    }

    function showNoResultsMessage(shown, search) {
        const offerList = document.getElementById("offerList");
        let noResults = offerList.querySelector(".no-results");

        if (shown === 0 && search !== "") {
            // אם אין תוצאות והיה חיפוש - הצג הודעה
            if (!noResults) {
                noResults = document.createElement('div');
                noResults.className = 'no-results';
                noResults.innerHTML = `
                    <i class="fas fa-search fa-3x mb-3"></i>
                    <h4>לא נמצאו תוצאות עבור "${search}"</h4>
                    <div>נסה לשנות את מונחי החיפוש</div>
                `;
                offerList.appendChild(noResults);
            } else {
                noResults.querySelector('h4').textContent = `לא נמצאו תוצאות עבור "${search}"`;
                noResults.style.display = "block";
            }
        } else if (noResults && search !== "") {
            // אם יש תוצאות - הסתר את ההודעה
            noResults.style.display = "none";
        } else if (noResults && search === "") {
            // אם אין חיפוש - הסר את ההודעה לגמרי
            noResults.remove();
        }
    }

    // ============================================
    // שליחת מייל
    // ============================================
    function sendOfferEmail(btn) {
        const offerId = btn.dataset.offerId;
        const email = btn.dataset.email;

        if (!email) {
            alert('לא נמצאה כתובת מייל ללקוח.');
            return;
        }

        if (!confirm(`האם לשלוח את ההצעה במייל לכתובת:\n${email}?`)) return;

        btn.disabled = true;
        const originalText = btn.innerHTML;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> שולח...';

        const formData = new FormData();
        formData.append('toEmail', email);
        const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
        if (tokenInput) {
            formData.append('__RequestVerificationToken', tokenInput.value);
        }

        fetch(`/offers/${offerId}/send-email`, {
            method: 'POST',
            body: formData
        })
        .then(r => r.json())
        .then(data => {
            console.log('Response:', data);
            if (data.ok || data.success) {
                showSuccessCard(data);
                btn.innerHTML = '<i class="fas fa-check"></i> נשלח!';
                btn.classList.remove('btn-primary');
                btn.classList.add('btn-success');
            } else {
                btn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> שגיאה';
                btn.classList.add('btn-danger');
                alert(data.message || 'שגיאה בשליחה');
            }
        })
        .catch((error) => {
            console.error('Error:', error);
            btn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> שגיאה';
            btn.classList.add('btn-danger');
            alert('שגיאה בשליחה - אנא נסה שוב');
        })
        .finally(() => {
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
                btn.classList.remove('btn-success', 'btn-danger');
                btn.classList.add('btn-primary');
            }, 3000);
        });
    }

    function showSuccessCard(data) {
        console.log('showSuccessCard called with:', data);

        // הסרת כרטיסיה קיימת
        const existingOverlay = document.querySelector('.email-success-overlay');
        if (existingOverlay) {
            existingOverlay.remove();
        }

        // יצירת הכרטיסיה
        const overlay = document.createElement('div');
        overlay.className = 'email-success-overlay';

        overlay.innerHTML = `
            <div class="email-success-card">
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="success-title">המייל נשלח בהצלחה! 🎉</div>

                <div class="email-details">
                    <div class="detail-row">
                        <span class="detail-label">
                            <i class="fas fa-envelope detail-icon"></i>נשלח אל:
                        </span>
                        <span class="detail-value" dir="ltr">${data.sentTo || data.email || ''}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">
                            <i class="fas fa-tag detail-icon"></i>נושא:
                        </span>
                        <span class="detail-value">${data.subject || 'הצעת מחיר - TMS'}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">
                            <i class="fas fa-clock detail-icon"></i>זמן שליחה:
                        </span>
                        <span class="detail-value">${data.sentAt || new Date().toLocaleString('he-IL')}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">
                            <i class="fas fa-server detail-icon"></i>ספק שליחה:
                        </span>
                        <span class="detail-value">${data.provider || 'SendGrid'}</span>
                    </div>
                    <div class="detail-row">
                        <span class="detail-label">
                            <i class="fas fa-hashtag detail-icon"></i>הצעה מספר:
                        </span>
                        <span class="detail-value">#${data.offerId || ''}</span>
                    </div>
                    ${data.customerName ? `
                    <div class="detail-row">
                        <span class="detail-label">
                            <i class="fas fa-user detail-icon"></i>לקוח:
                        </span>
                        <span class="detail-value">${data.customerName}</span>
                    </div>
                    ` : ''}
                </div>

                <button class="close-btn" onclick="closeSuccessCard()">
                    <i class="fas fa-check"></i> מעולה!
                </button>
            </div>
        `;

        document.body.appendChild(overlay);
        console.log('Card added to DOM');

        // סגירה אוטומטית לאחר 8 שניות
        setTimeout(() => {
            closeSuccessCard();
        }, 8000);

        // סגירה בלחיצה על הרקע
        overlay.addEventListener('click', (e) => {
            if (e.target === overlay) {
                closeSuccessCard();
            }
        });
    }

    function closeSuccessCard() {
        const overlay = document.querySelector('.email-success-overlay');
        if (overlay) {
            overlay.style.opacity = '0';
            overlay.style.transform = 'scale(0.8)';
            setTimeout(() => {
                overlay.remove();
            }, 300);
        }
    }

    // סגירה במקש ESC
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            closeSuccessCard();
        }
    });
</script>