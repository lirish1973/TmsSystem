<script>
    // חיפוש לקוח/מדריך/מספר
    function filterOffers() {
        var search = document.getElementById("searchInput").value.trim();
        var cards = document.querySelectorAll("#offerList .offer-card");
        var shown = 0;
        cards.forEach(function(card) {
            var customer = card.getAttribute("data-customer") || "";
            var guide = card.getAttribute("data-guide") || "";
            var offerid = card.getAttribute("data-offerid") || "";
            if (
                customer.includes(search) ||
                guide.includes(search) ||
                offerid.includes(search)
            ) {
                card.style.display = "";
                shown++;
            } else {
                card.style.display = "none";
            }
        });
        // הצג הודעה אם אין תוצאות
        var noResults = document.querySelector(".no-results");
        if (noResults) noResults.style.display = shown === 0 ? "" : "none";
    }


        function sendOfferEmail(offerId) {
        const btn = event.target;
        const originalText = btn.innerHTML;

        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> שולח...';

        fetch(`/Offers/SendOfferEmail`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            },
            body: `id=${offerId}&email=${encodeURIComponent(document.querySelector(`#email-${offerId}`).value)}`
        })
        .then(r => r.json())
        .then(data => {
            if (data.success) {
                showSuccessCard(data);
                btn.innerHTML = '<i class="fas fa-check"></i> נשלח!';
                btn.classList.remove('btn-primary');
                btn.classList.add('btn-success');
            } else {
                btn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> שגיאה';
                btn.classList.add('btn-danger');
                alert(data.message || 'שגיאה בשליחה');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            btn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> שגיאה';
            btn.classList.add('btn-danger');
            alert('שגיאה בשליחה');
        })
        .finally(() => {
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
                btn.classList.remove('btn-success', 'btn-danger');
                btn.classList.add('btn-primary');
            }, 3000);
        });
    }

    function showSuccessCard(data) {
        // יצירת הכרטיסיה
        const overlay = document.createElement('div');
        overlay.className = 'email-success-overlay';

        const card = document.createElement('div');
        card.className = 'email-success-card';

        card.innerHTML = `
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="success-title">המייל נשלח בהצלחה!</div>

            <div class="email-details">
                <div class="detail-row">
                    <span class="detail-label">נשלח אל:</span>
                    <span class="detail-value" dir="ltr">${data.sentTo}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">נושא:</span>
                    <span class="detail-value">${data.subject}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">זמן שליחה:</span>
                    <span class="detail-value">${data.sentAt}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">ספק שליחה:</span>
                    <span class="detail-value">${data.provider}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">הצעה מספר:</span>
                    <span class="detail-value">#${data.offerId}</span>
                </div>
                ${data.customerName ? `
                <div class="detail-row">
                    <span class="detail-label">לקוח:</span>
                    <span class="detail-value">${data.customerName}</span>
                </div>
                ` : ''}
            </div>

            <button class="close-btn" onclick="closeSuccessCard()">
                <i class="fas fa-times"></i> סגור
            </button>
        `;

        overlay.appendChild(card);
        document.body.appendChild(overlay);

        // אנימציה של כניסה
        setTimeout(() => {
            card.style.transform = 'translate(-50%, -50%) scale(1)';
            card.style.opacity = '1';
        }, 10);

        // סגירה אוטומטית לאחר 10 שניות
        setTimeout(() => {
            closeSuccessCard();
        }, 10000);

        // סגירה בלחיצה על הרקע
        overlay.addEventListener('click', (e) => {
            if (e.target === overlay) {
                closeSuccessCard();
            }
        });
    }

    function closeSuccessCard() {
        const overlay = document.querySelector('.email-success-overlay');
        if (overlay) {
            const card = overlay.querySelector('.email-success-card');
            card.style.transform = 'translate(-50%, -50%) scale(0.8)';
            card.style.opacity = '0';

            setTimeout(() => {
                overlay.remove();
            }, 300);
