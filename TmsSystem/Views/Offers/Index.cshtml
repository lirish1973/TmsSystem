@model IEnumerable<TmsSystem.Models.Offer>
@{
    ViewData["Title"] = "ניהול הצעות מחיר";
    var offers = Model?.ToList() ?? new List<TmsSystem.Models.Offer>();

    Console.WriteLine($"מספר ההצעות בView: {Model?.Count() ?? 0}");
    if (Model != null)
    {
        foreach (var offer in Model)
        {
            Console.WriteLine($"הצעה: ID={offer.OfferId}, לקוח={offer.CustomerId}");
        }
    }
}

<div class="container" style="max-width: 85%; padding-top: 35px; padding-bottom: 35px;">
    <div class="card main-card animate-in">
        <div class="card-header text-center">
            <h2 class="card-title">
                <i class="fas fa-calculator me-3"></i>
                @ViewData["Title"]
            </h2>

            <!-- הוספה חדשה - הודעה והכפתורים לפילטור -->
            @if (ViewBag.ShowNearOnly == true)
            {
                <div class="alert alert-info mt-3 mb-0" style="background: rgba(255,255,255,0.2); border: 1px solid rgba(255,255,255,0.3); color: white;">
                    <i class="fas fa-info-circle me-2"></i>
                    מוצגות רק הצעות מחיר עם תאריך טיול בשבועיים הקרובים
                </div>
            }
        </div>
        <div class="card-body p-4">

            <!-- הוספה חדשה - כפתורי פילטור -->
            <div class="row mb-3">
                <div class="col-12 d-flex justify-content-center gap-2">
                    @if (ViewBag.ShowNearOnly == true)
                    {
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>הצג את כל ההצעות
                        </a>
                    }
                    else
                    {
                        <a asp-action="Index" asp-route-filter="near" class="btn btn-outline-warning">
                            <i class="fas fa-calendar-check me-2"></i>הצעות קרובות בלבד
                        </a>
                    }
                </div>
            </div>

            <!-- חיפוש + כפתור יצירה - הקוד הקיים שלך ממשיך כרגיל -->
            <div class="row mb-4">
                <div class="col-md-8 position-relative mb-2 mb-md-0">
                    <input type="text" id="searchInput" class="form-control search-input" placeholder="חפש לפי שם לקוח, מדריך או מספר הזמנה..." oninput="filterOffers()" />
                    <i class="fas fa-search search-icon"></i>
                </div>
                <div class="col-md-4 d-grid gap-2">
                    <a href="@Url.Action("Create", "Offers")" class="btn btn-lg btn-primary"
                       style="background: linear-gradient(90deg,#667eea,#764ba2); border:none;">
                        <i class="fas fa-plus ms-2"></i> הצעת מחיר חדשה
                    </a>
                </div>
            </div>
       

            <!-- סטטיסטיקות -->
            <div class="row mb-5">
                <div class="col-md-4 mb-2 mb-md-0">
                    <div class="stats-card p-4 text-center">
                        <div class="stat-title">סה"כ הזמנות</div>
                        <div class="stat-value" id="statTotalOffers">@offers.Count()</div>
                    </div>
                </div>
                <div class="col-md-4 mb-2 mb-md-0">
                    <div class="stats-card p-4 text-center">
                        <div class="stat-title">סה"כ משתתפים</div>
                        <div class="stat-value" id="statTotalParticipants">@offers.Sum(o => o.Participants)</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stats-card p-4 text-center">
                        <div class="stat-title"></div>
                        <div class="stat-value" id="statTotalIncome"></div>
                    </div>
                </div>
            </div>

            <!-- רשימת הצעות -->
            <div id="offerList">
                @if (!offers.Any())
                {
                    <div class="no-results">
                        <i class="fas fa-calculator fa-3x mb-3"></i>
                        <h4>לא נמצאו הזמנות</h4>
                        <div>נסה לשנות את מונחי החיפוש או צור הזמנה חדשה</div>
                    </div>
                }
                else
                {
                    foreach (var offer in offers)
                    {
                        <div class="offer-card card px-4 py-2 mb-3" data-customer="@(offer.Customer?.FullName ?? "ללא נתונים") @(offer.Customer?.CustomerName ?? "ללא נתונים")" data-guide="@(offer.Guide?.GuideName ?? "ללא נתונים")" data-offerid="@offer.OfferId">
                            <div class="row align-items-center">
                                <div class="col-lg-8">
                                    <div class="d-flex align-items-center gap-3 mb-2">
                                        <span class="badge-offer">#@offer.OfferId</span>
                                        <h5 class="mb-0 fw-bold">@(offer.Customer?.FullName ?? "ללא נתונים")</h5>
                                    </div>
                                    <div class="d-flex flex-wrap gap-3 mb-2 text-muted">
                                        <span><i class="fas fa-user-circle me-1"></i>@(offer.Customer?.Phone ?? "ללא נתונים")</span>
                                        <span><i class="fas fa-calendar-alt me-1"></i>@offer.TourDate.ToString("dd/MM/yyyy")</span>
                                        <span><i class="fas fa-users me-1"></i>@offer.Participants משתתפים</span>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-md-6 mb-1">
                                            <div>
                                                <i class="fas fa-user-tie me-1 text-primary"></i>
                                                <span class="fw-semibold">מדריך:</span> @(offer.Guide?.GuideName ?? "ללא נתונים")
                                            </div>
                                            <div>
                                                <i class="fas fa-map-marker-alt me-1 text-primary"></i>
                                                <span class="fw-semibold">נקודת איסוף:</span> @(string.IsNullOrWhiteSpace(offer.PickupLocation) ? "ללא נתונים" : offer.PickupLocation)
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-1">
                                            <div>
                                                <i class="fas fa-credit-card me-1 text-primary"></i>
                                                <span class="fw-semibold">תשלום:</span> @(offer.PaymentMethod?.METHOD ?? "ללא נתונים")
                                            </div>
                                            <div>
                                                <span class="lunch-badge @(offer.LunchIncluded ? "lunch-yes" : "lunch-no")">
                                                    @(offer.LunchIncluded ? "ארוחת צהריים כלולה" : "ללא ארוחת צהריים")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 d-flex flex-column align-items-end justify-content-between gap-2">
                                    <div class="price-section bg-gradient-to-br from-green-50 to-emerald-100 p-2 rounded-3 border border-success w-100">
                                        <div class="text-success fw-bold mb-1" style="font-size: 0.85rem;">מחיר לאדם</div>
                                        <div class="fw-bold text-success mb-1" style="font-size: 1.5rem;">₪@offer.Price.ToString("N0")</div>
                                        <hr class="my-1" />
                                        <div class="text-success fw-bold mb-1" style="font-size: 0.85rem;">סה"כ לתשלום</div>
                                        <div class="fw-bold text-success" style="font-size: 1.7rem;">₪@offer.TotalPayment.ToString("N0")</div>
                                    </div>
                                    <div class="offer-actions d-flex gap-2 w-100">
                                        <a href="@Url.Action("ShowOffers", "Offers", new { id = offer.OfferId })" class="btn btn-outline-primary flex-fill btn-sm" title="צפה">
                                            <i class="fas fa-eye"></i>צפה
                                        </a>
                                        <a href="@Url.Action("Edit", "Offers", new { id = offer.OfferId })" class="btn btn-outline-warning flex-fill btn-sm" title="ערוך">
                                            <i class="fas fa-pencil-alt"></i>ערוך
                                        </a>
                                        <a href="@Url.Action("Delete", "Offers", new { id = offer.OfferId })" class="btn btn-outline-danger flex-fill btn-sm" title="מחק"
                                           onclick="return confirm('האם אתה בטוח שברצונך למחוק את ההזמנה?');">
                                            <i class="fas fa-trash-alt"></i>מחק
                                        </a>
                                        <a href="/offers/@offer.OfferId/preview-html" class="btn btn-outline-info flex-fill btn-sm" title="הצג HTML" target="_blank">
                                            <i class="fas fa-file-code"></i>HTML
                                        </a>
                                        <button class="btn btn-outline-success flex-fill btn-sm" title="שלח במייל" onclick="sendOfferEmail(@offer.OfferId, this)">
                                            <i class="fas fa-envelope"></i>שלח במייל
                                        </button>
                                    </div>
                                    <div class="text-muted text-center w-100" style="font-size:0.8em;">
                                        נוצר ב: @offer.CreatedAt.ToString("dd/MM/yyyy")
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
<script>
    function sendOfferEmail(offerId, btn) {
        if (!confirm('האם לשלוח את ההצעה במייל ללקוח?')) return;
        btn.disabled = true;
        btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> שולח...';
        fetch(`/offers/${offerId}/send-email`, { method: 'POST' })
            .then(r => r.json())
            .then(data => {
                if (data.ok) {
                    btn.innerHTML = '<i class="fas fa-check"></i> נשלח!';
                } else {
                    btn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> שגיאה';
                    alert(data.message || 'שגיאה בשליחה');
                }
            })
            .catch(() => {
                btn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> שגיאה';
                alert('שגיאה בשליחה');
            })
            .finally(() => {
                setTimeout(() => {
                    btn.innerHTML = '<i class="fas fa-envelope"></i>שלח במייל';
                    btn.disabled = false;
                }, 3000);
            });
    }
</script>
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 20px 0;
    }

    .main-card {
        background: rgba(255,255,255,0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        border: none;
        overflow: hidden;
        margin: auto;
    }

    .card-header {
        background: linear-gradient(45deg, #667eea, #764ba2);
        border: none;
        padding: 25px;
        position: relative;
        color: white;
        border-radius: 19px 19px 0 0;
    }

    .card-title {
        color: white;
        font-weight: 600;
        font-size: 28px;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 1;
    }

    .stats-card {
        background: linear-gradient(135deg, #f8fafc 0%, #e8f2ff 100%);
        border-radius: 14px;
        border: 2px solid #e0e0e0;
    }

    .badge-offer {
        background: linear-gradient(90deg, #667eea, #764ba2);
        color: #fff;
        font-size: 1.1rem;
        padding: 7px 15px;
        border-radius: 12px;
        font-weight: 600;
    }

    .offer-card {
        background: rgba(255,255,255,0.95);
        border-radius: 18px;
        box-shadow: 0 6px 18px rgba(102,126,234,0.13);
        margin-bottom: 15px;
        transition: all 0.3s;
    }

        .offer-card:hover {
            box-shadow: 0 12px 32px rgba(102,126,234,0.20);
            transform: scale(1.015);
        }

    .price-section {
        min-height: auto;
    }

    .stat-title {
        font-size: 1rem;
        color: #667eea;
    }

    .stat-value {
        font-size: 2.2rem;
        font-weight: bold;
        color: #3a3a6a;
    }

    .search-input {
        height: 50px;
        font-size: 1.15rem;
        border-radius: 12px;
        padding-right: 45px;
        background: rgba(255,255,255,0.93);
    }

    .search-icon {
        position: absolute;
        right: 18px;
        top: 50%;
        transform: translateY(-50%);
        color: #667eea;
        z-index: 10;
    }

    .offer-actions .btn {
        border-radius: 8px;
        font-size: 0.9rem;
        padding: 5px 0;
    }

    .lunch-badge {
        font-size: 0.85rem;
        padding: 4px 10px;
        border-radius: 10px;
        font-weight: 500;
    }

    .lunch-yes {
        background: linear-gradient(90deg, #28a745, #20c997);
        color: #fff;
    }

    .lunch-no {
        background: linear-gradient(90deg, #aaa, #e0e0e0);
        color: #444;
    }

    .no-results {
        text-align: center;
        padding: 50px 0;
        color: #aaa;
    }
</style>

<script>
    // חיפוש לקוח/מדריך/מספר
    function filterOffers() {
        var search = document.getElementById("searchInput").value.trim();
        var cards = document.querySelectorAll("#offerList .offer-card");
        var shown = 0;
        cards.forEach(function(card) {
            var customer = card.getAttribute("data-customer") || "";
            var guide = card.getAttribute("data-guide") || "";
            var offerid = card.getAttribute("data-offerid") || "";
            if (
                customer.includes(search) ||
                guide.includes(search) ||
                offerid.includes(search)
            ) {
                card.style.display = "";
                shown++;
            } else {
                card.style.display = "none";
            }
        });
        // הצג הודעה אם אין תוצאות
        var noResults = document.querySelector(".no-results");
        if (noResults) noResults.style.display = shown === 0 ? "" : "none";
    }
</script>