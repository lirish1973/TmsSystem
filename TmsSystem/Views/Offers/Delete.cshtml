@model TmsSystem.Models.Offer
@{
    ViewData["Title"] = "מחיקת הצעת מחיר";
}

<div class="container" style="max-width: 70%; padding-top: 35px; padding-bottom: 35px;">
    <div class="card main-card animate-in">
        <div class="card-header text-center">
            <h2 class="card-title">
                <i class="fas fa-trash-alt me-3"></i>
                מחיקת הצעת מחיר
            </h2>
        </div>
        <div class="card-body p-4">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    אזהרה!
                </h4>
                <p class="mb-0">האם אתה בטוח שברצונך למחוק את הצעת המחיר הזו? פעולה זו לא ניתנת לביטול.</p>
            </div>

            <div class="offer-details">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="detail-item">
                            <strong>מספר הצעה:</strong>
                            <span class="badge badge-offer">#@Model.OfferId</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item">
                            <strong>תאריך יצירה:</strong>
                            <span>@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <strong>שם הלקוח:</strong>
                            <span>@(Model.Customer?.FullName ?? "ללא נתונים")</span>
                        </div>
                        <div class="detail-item mb-3">
                            <strong>טלפון:</strong>
                            <span>@(Model.Customer?.Phone ?? "ללא נתונים")</span>
                        </div>
                        <div class="detail-item mb-3">
                            <strong>מדריך:</strong>
                            <span>@(Model.Guide?.GuideName ?? "ללא נתונים")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <strong>תאריך הטיול:</strong>
                            <span>@Model.TourDate.ToString("dd/MM/yyyy")</span>
                        </div>
                        <div class="detail-item mb-3">
                            <strong>מספר משתתפים:</strong>
                            <span>@Model.Participants</span>
                        </div>
                        <div class="detail-item mb-3">
                            <strong>נקודת איסוף:</strong>
                            <span>@(Model.PickupLocation ?? "ללא נתונים")</span>
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="detail-item mb-3">
                            <strong>אמצעי תשלום:</strong>
                            <span>@(Model.PaymentMethod?.METHOD ?? "ללא נתונים")</span>
                        </div>
                        <div class="detail-item mb-3">
                            <strong>ארוחת צהריים:</strong>
                            <span class="lunch-badge @(Model.LunchIncluded ? "lunch-yes" : "lunch-no")">
                                @(Model.LunchIncluded ? "כלולה" : "לא כלולה")
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="pricing-info">
                            <div class="detail-item mb-3">
                                <strong>מחיר לאדם:</strong>
                                <span class="price">₪@Model.Price.ToString("N0")</span>
                            </div>
                            <div class="detail-item mb-0">
                                <strong>סך הכל לתשלום:</strong>
                                <span class="total-price">₪@Model.TotalPayment.ToString("N0")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="OfferId" />
                <div class="d-flex justify-content-center gap-3">
                    <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                        <i class="fas fa-arrow-right me-2"></i>
                        ביטול
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg px-4"
                            onclick="return confirm('האם אתה בטוח לחלוטין שברצונך למחוק את ההצעה?');">
                        <i class="fas fa-trash-alt me-2"></i>
                        מחק סופית
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main-card {
        background: rgba(255,255,255,0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        border: none;
        overflow: hidden;
        margin: auto;
    }

    .card-header {
        background: linear-gradient(45deg, #dc3545, #c82333);
        border: none;
        padding: 25px;
        color: white;
        border-radius: 19px 19px 0 0;
    }

    .card-title {
        color: white;
        font-weight: 600;
        font-size: 28px;
        margin: 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .offer-details {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 20px;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 8px 0;
    }

        .detail-item strong {
            color: #495057;
            font-weight: 600;
        }

    .badge-offer {
        background: linear-gradient(90deg, #667eea, #764ba2);
        color: #fff;
        font-size: 1rem;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 600;
    }

    .lunch-badge {
        font-size: 0.9rem;
        padding: 4px 10px;
        border-radius: 8px;
        font-weight: 500;
    }

    .lunch-yes {
        background: linear-gradient(90deg, #28a745, #20c997);
        color: #fff;
    }

    .lunch-no {
        background: linear-gradient(90deg, #6c757d, #5a6268);
        color: #fff;
    }

    .price {
        font-size: 1.2rem;
        font-weight: bold;
        color: #28a745;
    }

    .total-price {
        font-size: 1.4rem;
        font-weight: bold;
        color: #dc3545;
    }

    .pricing-info {
        background: linear-gradient(135deg, #e8f5e8 0%, #f0f8f0 100%);
        padding: 15px;
        border-radius: 10px;
        border: 2px solid #d4edda;
    }

    .btn {
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }
</style>