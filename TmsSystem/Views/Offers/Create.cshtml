@model TmsSystem.ViewModels.CreateOfferViewModel

@{
    ViewData["Title"] = "יצירת הצעת מחיר";
}

<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            padding: 20px 0;
        }

        .main-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border: none;
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            padding: 25px;
            position: relative;
        }

            .card-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" patternUnits="userSpaceOnUse" width="100" height="100"><circle cx="50" cy="50" r="1" fill="%23ffffff" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
            }

        .card-title {
            color: white;
            font-weight: 600;
            font-size: 28px;
            margin: 0;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            position: relative;
            z-index: 1;
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
            font-size: 14px;
        }

        .form-control, .form-select {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 12px 16px;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

            .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
                transform: translateY(-2px);
            }

            .form-control:hover, .form-select:hover {
                border-color: #667eea;
                transform: translateY(-1px);
            }

        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            padding: 15px 40px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
                background: linear-gradient(45deg, #5a6fd8, #6a42a0);
            }

        .form-section {
            background: rgba(248, 249, 250, 0.8);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
            border: 1px solid rgba(222, 226, 230, 0.5);
        }

        .section-title {
            color: #495057;
            font-weight: 600;
            font-size: 18px;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #667eea;
            display: inline-block;
        }

        .row-cards {
            background: white;
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 15px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

            .row-cards:hover {
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                transform: translateY(-2px);
            }

        .price-calculation {
            background: linear-gradient(135deg, #f8f9ff 0%, #e8f2ff 100%);
            border: 2px dashed #667eea;
            border-radius: 15px;
            padding: 20px;
            margin: 20px 0;
        }

        .total-display {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            padding: 15px;
            border-radius: 12px;
            text-align: center;
            font-size: 20px;
            font-weight: bold;
            margin-top: 15px;
        }

        .checkbox-custom {
            transform: scale(1.2);
            accent-color: #667eea;
        }

        .required-field {
            position: relative;
        }

            .required-field::after {
                content: '*';
                color: #dc3545;
                margin-right: 3px;
            }

        .floating-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #667eea;
            z-index: 10;
        }

        .has-icon {
            padding-right: 45px;
        }

        .animate-in {
            animation: slideIn 0.5s ease-out;
        }
        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>
</head>
<body>
    <div class="container" style="max-width: 85%;">
        <div class="card main-card animate-in">
            <div class="card-header text-center">
                <h2 class="card-title">
                    <i class="fas fa-calculator me-3"></i>
                    יצירת הצעת מחיר לסיור
                </h2>
            </div>
            <div class="card-body p-4">
                @* השתמש בטופס MVC מלא! *@
                <form asp-action="Create" asp-controller="Offers" method="post">
                    @Html.AntiForgeryToken()
                    <!-- פרטי הלקוח והסיור -->
                    <div class="form-section">
                        <h4 class="section-title">
                            <i class="fas fa-user me-2"></i>
                            פרטי הלקוח והסיור
                        </h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="row-cards">
                                    <label class="form-label required-field" for="CustomerId">לקוח</label>
                                    <div class="position-relative">
                                        <i class="fas fa-user floating-icon"></i>
                                        <select asp-for="CustomerId" class="form-select"
                                                asp-items="@(new SelectList(Model.Customers, "CustomerId", "DisplayName"))">
                                            <option value="">-- בחר לקוח --</option>
                                        </select>
                                        @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="row-cards">
                                    <label class="form-label required-field" for="GuideId">מדריך</label>
                                    <div class="position-relative">
                                        <i class="fas fa-user-tie floating-icon"></i>
                                        <select asp-for="GuideId" class="form-select"
                                                asp-items="@(new SelectList(Model.Guides, "GuideId", "GuideName"))"></select>
                                        @Html.ValidationMessageFor(m => m.GuideId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="row-cards">
                                    <label class="form-label required-field" for="Participants">מספר משתתפים</label>
                                    <div class="position-relative">
                                        <i class="fas fa-users floating-icon"></i>
                                        <input asp-for="Participants" type="number" class="form-control has-icon"
                                               min="1" max="50" required oninput="calculateTotal()" />
                                        @Html.ValidationMessageFor(m => m.Participants, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="row-cards">
                                    <label class="form-label required-field" for="TourDate">תאריך טיול</label>
                                    <div class="position-relative">
                                        <i class="fas fa-calendar floating-icon"></i>
                                        <input asp-for="TourDate" type="date" class="form-control has-icon" required />
                                        @Html.ValidationMessageFor(m => m.TourDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="row-cards">
                                    <label class="form-label" for="PickupLocation">נקודת איסוף</label>
                                    <div class="position-relative">
                                        <i class="fas fa-map-marker-alt floating-icon"></i>
                                        <input asp-for="PickupLocation" type="text" class="form-control has-icon"
                                               placeholder="לדוגמה: תחנת רכבת תל אביב" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- מחירים וכלול -->
                    <div class="form-section">
                        <h4 class="section-title">
                            <i class="fas fa-money-bill-wave me-2"></i>
                            מחירים ופירוט
                        </h4>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="row-cards">
                                    <label class="form-label required-field" for="Price">מחיר לאדם (₪)</label>
                                    <div class="position-relative">
                                        <i class="fas fa-shekel-sign floating-icon"></i>
                                        <input asp-for="Price" type="number" class="form-control has-icon"
                                               min="0" step="0.01" required oninput="calculateTotal()" />
                                        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="row-cards">
                                    <label class="form-label required-field" for="PaymentMethodId">אמצעי תשלום</label>
                                    <div class="position-relative">
                                        <i class="fas fa-credit-card floating-icon"></i>
                                        <select asp-for="id" class="form-select has-icon"
                                                asp-items="@(new SelectList(Model.PaymentMethods, "id", "method"))">
                                            <option value="">-- בחר אמצעי תשלום --</option>
                                        </select>
                                        @Html.ValidationMessageFor(m => m.PaymentMethodId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        <div class="price-calculation">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="PriceIncludes">מה המחיר כולל</label>
                                    <textarea asp-for="PriceIncludes" class="form-control" rows="4"
                                              placeholder="לדוגמה: הסעות, כניסות לאתרים, מדריך מוסמך..."></textarea>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label" for="PriceExcludes">מה המחיר אינו כולל</label>
                                    <textarea asp-for="PriceExcludes" class="form-control" rows="4"
                                              placeholder="לדוגמה: ארוחות, דמי כניסה נוספים, קניות אישיות..."></textarea>
                                </div>
                            </div>
                            <div class="form-check mb-3">
                                <input asp-for="LunchIncluded" type="checkbox" class="form-check-input checkbox-custom"
                                       onchange="updateLunchStatus()" />
                                <label asp-for="LunchIncluded" class="form-check-label fw-bold">
                                    <i class="fas fa-utensils me-2"></i>
                                    ארוחת צהריים כלולה במחיר
                                </label>
                            </div>
                            <div class="total-display">
                                <i class="fas fa-calculator me-2"></i>
                                סה"כ לתשלום: <span id="totalAmount">₪0</span>
                            </div>
                        </div>
                    </div>
                    <!-- בקשות מיוחדות -->
                    <div class="form-section">
                        <h4 class="section-title">
                            <i class="fas fa-star me-2"></i>
                            בקשות מיוחדות והערות
                        </h4>
                        <div class="row-cards">
                            <label class="form-label" for="SpecialRequests">בקשות מיוחדות</label>
                            <textarea asp-for="SpecialRequests" class="form-control" rows="3"
                                      placeholder="לדוגמה: נגישות לכיסא גלגלים, מגבלות תזונתיות, בקשות מיוחדות נוספות..."></textarea>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-file-invoice-dollar me-2"></i>
                            צור הצעת מחיר
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // הגדרה של תאריך ברירת מחדל
        window.onload = function() {
            var tourDateInput = document.querySelector("input[name='TourDate']");
            if (tourDateInput) tourDateInput.value = new Date().toISOString().split('T')[0];
        };

        function calculateTotal() {
            var participants = parseInt(document.querySelector("input[name='Participants']").value) || 0;
            var pricePerPerson = parseFloat(document.querySelector("input[name='Price']").value) || 0;
            var total = participants * pricePerPerson;
            document.getElementById('totalAmount').textContent = `₪${total.toLocaleString('he-IL')}`;
            // שמור גם ב־TotalPayment
            var totalInput = document.querySelector("input[name='TotalPayment']");
            if (totalInput) totalInput.value = total;
        }

        function updateLunchStatus() {
            var lunchIncluded = document.querySelector("input[name='LunchIncluded']").checked;
            var priceIncludesText = document.querySelector("textarea[name='PriceIncludes']");
            if (lunchIncluded) {
                if (!priceIncludesText.value.includes('ארוחת צהריים')) {
                    priceIncludesText.value += (priceIncludesText.value ? '\n' : '') + '• ארוחת צהריים';
                }
            } else {
                priceIncludesText.value = priceIncludesText.value.replace(/\n?• ארוחת צהריים/g, '');
            }
        }
    </script>
</body>
</html>