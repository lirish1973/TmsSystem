@model TmsSystem.Models.Guide

@{
    ViewData["Title"] = "עריכת מדריך";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4><i class="fas fa-edit"></i> עריכת מדריך - @Model.GuideName</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="GuideId" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="GuideName" class="form-label">
                                שם המדריך <span class="text-danger">*</span>
                            </label>
                            <input asp-for="GuideName" class="form-control" />
                            <span asp-validation-for="GuideName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">תיאור</label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="ניסיון, התמחויות, תחומי עניין..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">טלפון</label>
                                <input asp-for="Phone" class="form-control" placeholder="050-1234567" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">אימייל</label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="guide@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label">
                                    מדריך פעיל במערכת
                                </label>
                            </div>
                            <small class="form-text text-muted">מדריכים לא פעילים לא יופיעו ברשימות הבחירה</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>תאריך יצירה:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy בשעה HH:mm")
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> ביטול
                            </a>
                            <button type="submit" class="btn btn-warning text-white">
                                <i class="fas fa-save"></i> עדכן
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}