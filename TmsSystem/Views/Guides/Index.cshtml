@model IEnumerable<TmsSystem.Models.Guide>

@{
    ViewData["Title"] = "מדריכים";
}

<div class="container-fluid mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="fas fa-user-tie"></i> רשימת מדריכים</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> הוסף מדריך חדש
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>שם המדריך</th>
                                <th>תיאור</th>
                                <th>טלפון</th>
                                <th>אימייל</th>
                                <th>סטטוס</th>
                                <th class="text-center">פעולות</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.GuideName</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            @(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Phone))
                                        {
                                            <a href="tel:@item.Phone" class="text-decoration-none">
                                                <i class="fas fa-phone text-primary"></i> @item.Phone
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Email))
                                        {
                                            <a href="mailto:@item.Email" class="text-decoration-none">
                                                <i class="fas fa-envelope text-primary"></i> @item.Email
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">פעיל</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">לא פעיל</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.GuideId"
                                               class="btn btn-sm btn-info text-white" title="פרטים">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.GuideId"
                                               class="btn btn-sm btn-warning text-white" title="עריכה">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.GuideId"
                                               class="btn btn-sm btn-danger" title="מחיקה">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> אין מדריכים במערכת.
                    <a asp-action="Create" class="alert-link">לחץ כאן להוספת מדריך ראשון</a>
                </div>
            }
        </div>
    </div>
</div>