@model TmsSystem.Models.Tour

@{
    ViewData["Title"] = "פרטי הסיור - " + Model.Title;
}

<div class="container mt-4" dir="rtl">
    <div class="row">
        <div class="col-12">
            <!-- כותרת עם כפתור חזרה -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary mb-0">
                    <i class="fas fa-map-marker-alt"></i> @Model.Title
                </h2>
                <div class="btn-group">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-right"></i> חזור לרשימה
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.TourId" class="btn btn-info text-white">
                        <i class="fas fa-edit"></i> עריכה
                    </a>
                </div>
            </div>

            <!-- כרטיס מידע בסיסי -->
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle"></i> מידע כללי
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>מספר סיור:</strong> <span class="badge bg-primary">@Model.TourId</span></p>
                            <p><strong>תאריך יצירה:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>שם הסיור:</strong> @Model.Title</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr>
                        <h6 class="text-primary">תיאור הסיור:</h6>
                        <p class="lead">@Model.Description</p>
                    }
                </div>
            </div>

            <div class="row">
                <!-- לוח זמנים -->
                <div class="col-md-4 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-clock"></i> לוח זמנים
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Schedule != null && Model.Schedule.Any())
                            {
                                @foreach (var item in Model.Schedule.OrderBy(s => s.StartTime))
                                {
                                    <div class="schedule-item mb-3">
                                        <div class="time-badge">
                                            <i class="fas fa-play text-success"></i>
                                            <strong>@item.StartTime.ToString(@"hh\:mm")</strong>
                                            @if (item.EndTime.HasValue)
                                            {
                                                <span> - @item.EndTime?.ToString(@"hh\:mm")</span>
                                            }
                                        </div>
                                        <div class="location-info mt-2">
                                            <i class="fas fa-map-marker-alt text-danger"></i>
                                            <strong>@item.Location</strong>
                                        </div>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <div class="description-text mt-1">
                                                <small class="text-muted">@item.Description</small>
                                            </div>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted">
                                    <i class="fas fa-clock fa-3x mb-3"></i>
                                    <p>אין לוח זמנים מוגדר</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- מה כלול -->
                <div class="col-md-4 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-check-circle"></i> כלול במחיר
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Includes != null && Model.Includes.Any())
                            {
                                @foreach (var include in Model.Includes)
                                {
                                    <div class="include-item mb-2">
                                        <i class="fas fa-check text-success"></i>
                                        <span>@include.Description</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted">
                                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                                    <p>אין פריטים מוגדרים</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- מה לא כלול -->
                <div class="col-md-4 mb-4">
                    <div class="card shadow h-100">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="fas fa-times-circle"></i> לא כלול במחיר
                            </h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Excludes != null && Model.Excludes.Any())
                            {
                                @foreach (var exclude in Model.Excludes)
                                {
                                    <div class="exclude-item mb-2">
                                        <i class="fas fa-times text-warning"></i>
                                        <span>@exclude.Description</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted">
                                    <i class="fas fa-smile fa-3x mb-3"></i>
                                    <p>הכל כלול במחיר!</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .schedule-item {
        padding: 15px;
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.1), rgba(13, 110, 253, 0.05));
        border-radius: 8px;
        border-right: 4px solid #0d6efd;
    }

    .time-badge {
        font-weight: 600;
        color: #0d6efd;
    }

    .location-info {
        font-weight: 500;
    }

    .description-text {
        line-height: 1.4;
    }

    .include-item, .exclude-item {
        padding: 8px 12px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .include-item {
        background: rgba(25, 135, 84, 0.1);
    }

    .exclude-item {
        background: rgba(255, 193, 7, 0.1);
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .btn-group .btn {
        margin-right: 5px;
    }

    .lead {
        font-size: 1.1rem;
        line-height: 1.6;
        text-align: justify;
    }
</style>