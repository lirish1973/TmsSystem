        </header>

        <!-- Main Content -->
        <main role="main" class="container my-3">
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="text-center">
            &copy; 2025 - TmsSystem - TRYIT -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>

    <!-- ========================================
         SCRIPTS
         ======================================== -->
