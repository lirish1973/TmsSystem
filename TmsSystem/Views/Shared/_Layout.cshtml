<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TmsSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TmsSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            margin: 0;
        }

        /* Sidebar */
        .sidebar {
            width: 240px;
            margin-top: 60px;
            background-color: #fdfdf5; /* לבן פנינה */
            border-left: 1px solid #ddd;
            transition: width 0.3s ease;
            overflow-x: hidden;
        }

            .sidebar.collapsed {
                width: 70px;
            }

            .sidebar .nav-link {
                display: flex;
                align-items: center;
                gap: 10px;
                padding: 10px 15px;
                white-space: nowrap;
            }

                .sidebar .nav-link i {
                    font-size: 1.2rem;
                    width: 24px;
                    text-align: center;
                }

            .sidebar.collapsed .nav-link span {
                display: none; /* מסתיר טקסט ומשאיר רק אייקון */
            }

        /* Main content */
        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        header.navbar {
            border-bottom: 1px solid #ddd;
        }

        footer {
            margin-top: auto;
            padding: 10px;
            background-color: #f8f9fa;
        }

        .pin-btn {
            cursor: pointer;
            padding: 10px;
            text-align: center;
            font-size: 1.2rem;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <!-- Sidebar - מוצג רק למשתמשים מחוברים -->
    @if (User.Identity.IsAuthenticated)
    {
        <div id="sidebar" class="sidebar">
            <nav class="nav flex-column">
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> <span>בית</span>
                </a>
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-speedometer2"></i> <span>Dashboard</span>
                </a>

                <a class="nav-link" data-bs-toggle="collapse" href="#customersMenu">
                    <i class="bi bi-people"></i> <span>לקוחות</span>
                </a>
                <div class="collapse ps-4" id="customersMenu">
                    <a class="nav-link" asp-controller="Customers" asp-action="Index">הצג לקוחות</a>
                    <a class="nav-link" asp-controller="Customers" asp-action="Create">הוסף לקוח</a>
                </div>

                <!-- תפריט משתמשים - רק למנהלים -->
                @if (User.IsInRole("Admin"))
                {
                    <a class="nav-link" data-bs-toggle="collapse" href="#usersMenu">
                        <i class="bi bi-person"></i> <span>משתמשים</span>
                    </a>
                    <div class="collapse ps-4" id="usersMenu">
                        <a class="nav-link" asp-controller="Users" asp-action="Index">הצג משתמשים</a>
                        <a class="nav-link" asp-controller="Account" asp-action="Register">הוסף משתמש</a>
                    </div>
                }

                <a class="nav-link" data-bs-toggle="collapse" href="#toursMenu">
                    <i class="bi bi-geo-alt"></i> <span>סיורים</span>
                </a>
                <div class="collapse ps-4" id="toursMenu">
                    <a class="nav-link" asp-controller="Tours" asp-action="Index">הצג סיורים</a>
                    <a class="nav-link" asp-controller="Tours" asp-action="CreateTour">הוסף סיור</a>
                </div>

                <a class="nav-link" data-bs-toggle="collapse" href="#offersMenu">
                    <i class="bi bi-cash-stack"></i> <span>הצעות מחיר</span>
                </a>
                <div class="collapse ps-4" id="offersMenu">
                    <a class="nav-link" asp-controller="Offers" asp-action="Index">הצג הצעות מחיר</a>
                    <a class="nav-link" asp-controller="Offers" asp-action="Index" asp-route-filter="near">הצעות קרובות</a>
                    <a class="nav-link" asp-controller="Offers" asp-action="Create">צור הצעת מחיר</a>
                </div>

                <div class="pin-btn" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i>
                </div>
            </nav>
        </div>
    }

    <!-- Main -->
    <div class="main-content">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">TmsSystem</a>

                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Tours" asp-action="Index">סיורים</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Reports" asp-action="Index">דוחות</a>
                                </li>
                            }
                        </ul>

                        <!-- צד שמאל -->
                        <ul class="navbar-nav ms-auto">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                        שלום @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="UserProfile">פרופיל</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                                <button class="dropdown-item" type="submit">התנתקות</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>

                                <!-- האפשרות הזו תופיע רק למנהלים -->
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                            ניהול מערכת
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-controller="Users" asp-action="Index">ניהול משתמשים</a></li>
                                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Register">הוספת משתמש</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" href="#">הגדרות מערכת</a></li>
                                        </ul>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">כניסה</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="container my-3">
            @RenderBody()
        </main>

        <footer class="text-center">
            &copy; 2025 - TmsSystem - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
        }
    </script>

    <script>
        // קיפול אוטומטי של תפריטים צד
        document.addEventListener("DOMContentLoaded", function() {
            const collapses = document.querySelectorAll(".sidebar .collapse");

            collapses.forEach(collapse => {
                const trigger = document.querySelector(`[href="#${collapse.id}"]`);
                if (trigger) {
                    trigger.addEventListener("click", function(e) {
                        collapses.forEach(other => {
                            if (other !== collapse) {
                                const bsCollapse = bootstrap.Collapse.getInstance(other);
                                if (bsCollapse) {
                                    bsCollapse.hide();
                                } else {
                                    new bootstrap.Collapse(other, { toggle: false }).hide();
                                }
                            }
                        });
                    });
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>