@model TmsSystem.ViewModels.UserProfileViewModel

<div class="container mt-5" dir="rtl">
    <div class="card shadow-lg border-0 rounded-4" style="max-width: 600px; margin: 0 auto; background: linear-gradient(135deg, #e6f2ff, #ffffff);">
        <div class="card-header text-center text-white rounded-top-4" style="background-color: #0d6efd;">
            <h3 class="mb-0 fw-bold">עריכת פרטי משתמש</h3>
        </div>

        <div class="card-body p-4">
            @using (Html.BeginForm("Profile", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
            {
                @Html.HiddenFor(m => m.Id)

                <div class="mb-3">
                    @Html.LabelFor(m => m.Username, "שם משתמש", new { @class = "form-label fw-semibold text-primary" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, "אימייל", new { @class = "form-label fw-semibold text-primary" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.FirstName, "שם פרטי", new { @class = "form-label fw-semibold text-primary" })
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.LastName, "שם משפחה", new { @class = "form-label fw-semibold text-primary" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Address, "כתובת", new { @class = "form-label fw-semibold text-primary" })
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Phone, "טלפון", new { @class = "form-label fw-semibold text-primary" })
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @type = "tel" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.CompanyName, "שם החברה", new { @class = "form-label fw-semibold text-primary" })
                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control" })
                </div>

                <div class="mb-4">
                    @Html.LabelFor(m => m.BirthDate, "תאריך לידה", new { @class = "form-label fw-semibold text-primary" })
                    @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @type = "date" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary px-5 py-2 fw-bold rounded-pill shadow-sm"
                            style="background: linear-gradient(90deg, #007bff, #00bfff); border: none;">
                        שמור
                    </button>
                </div>
            }
        </div>
    </div>
</div>
