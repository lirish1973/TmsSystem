@model TmsSystem.Models.ApplicationUser

@{
    ViewData["Title"] = "עריכת משתמש";
}

<div class="container-xxl mt-4" dir="rtl">
    <h2 class="mb-4 text-end">עריכת משתמש</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control text-end" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control text-end" />
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control text-end" />
        </div>

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control text-end" />
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control text-end" />
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control text-end" />
        </div>

        <div class="mb-3">
            <label asp-for="CompanyName" class="form-label"></label>
            <input asp-for="CompanyName" class="form-control text-end" />
        </div>

        <div class="mb-3">
            <label asp-for="BirthDate" class="form-label"></label>
            <input asp-for="BirthDate" type="date" class="form-control text-end" />
        </div>

        <button type="submit" class="btn btn-success">שמירה</button>
        <a asp-action="Index" class="btn btn-secondary">חזרה לרשימה</a>
    </form>
</div>
