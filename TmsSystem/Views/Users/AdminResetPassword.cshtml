@{
    ViewData["Title"] = "איפוס סיסמה";
}

<div class="container mt-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-key"></i> איפוס סיסמה למשתמש
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>פרטי המשתמש:</strong>
                        <ul class="mb-0 mt-2">
                            <li><strong>שם משתמש:</strong> @ViewBag.UserName</li>
                            <li><strong>אימייל:</strong> @ViewBag.Email</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>שים לב!</strong><br/>
                        פעולה זו תאפס את הסיסמה של המשתמש לסיסמה זמנית:<br/>
                        <code class="fs-5">$#$TempPass123</code>
                    </div>

                    <form asp-action="AdminResetPassword" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@ViewBag.UserId" />
                        <input type="hidden" name="confirm" value="true" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-check"></i> אשר איפוס סיסמה
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> ביטול
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>