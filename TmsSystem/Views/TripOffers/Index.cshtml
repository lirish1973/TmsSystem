@model IEnumerable<TmsSystem.Models.TripOffer>

@{
    ViewData["Title"] = "הצעות מחיר לטיולים";
}
@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <strong>שגיאה:</strong> @ViewBag.ErrorMessage
    </div>
}
<!-- 🔍 Debug Info -->
<div class="alert alert-info">
    <strong>🔍 Debug:</strong>
    Model is @(Model == null ? "NULL" : "NOT NULL") |
    Count: @(Model?.Count() ?? 0)
</div>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3><i class="fas fa-file-invoice-dollar"></i> הצעות מחיר לטיולים</h3>
            <a asp-action="Create" class="btn btn-light">
                <i class="fas fa-plus"></i> הצעת מחיר חדשה
            </a>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>מספר הצעה</th>
                                <th>לקוח</th>
                                <th>טיול</th>
                                <th>תאריך יציאה</th>
                                <th>משתתפים</th>
                                <th>מחיר כולל</th>
                                <th>סטטוס</th>
                                <th>תאריך יצירה</th>
                                <th>פעולות</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var offer in Model)
                            {
                                <tr>
                                    <td><strong>@offer.OfferNumber</strong></td>
                                    <td>@offer.Customer?.DisplayName</td>
                                    <td>@offer.Trip?.Title</td>
                                    <td>@offer.DepartureDate.ToString("dd/MM/yyyy")</td>
                                    <td>@offer.Participants</td>
                                    <td><strong>$@offer.TotalPrice.ToString("N2")</strong></td>
                                    <td>
                                        <span class="badge bg-warning">@offer.Status</span>
                                    </td>
                                    <td>@offer.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@offer.TripOfferId" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> אין הצעות מחיר במערכת.
                    <a asp-action="Create" class="btn btn-primary btn-sm">צור הצעת מחיר ראשונה</a>
                </div>
            }
        </div>
    </div>
</div>